<p id="notice"><%= notice %></p>

<h1>Listing Cargos</h1>

<div id="search">
  <%= form_tag cargos_path, method: :get do %>
    <%= text_field_tag( 'q', nil, class: "text", type: 'text', title:"Search", 
                       value: @q,  placeholder: "Destrination_id"  ) %> 
    <br/>
    <input type="submit" value="Find Destination", autofocus="true" /> 
  <%- end -%>
</div>


<table>
  <thead>
    <tr>
      <% prez.titles.each do |title| %>
        <th><%= title %></th>
      <% end  %>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% prez.each do |cargo_prez| %>
      <tr>            
        <% cargo_prez.values.each do | value | %>
          <td><%= exhibit(value, self) %> </td> 
        <% end %>
        <td><%= cargo_prez.link_to_show %></td>
        <td><%= cargo_prez.link_to_edit %></td>
        <td><%= cargo_prez.link_to_destroy %></td>
      </tr>
    <% end %>
  </tbody>
</table>

